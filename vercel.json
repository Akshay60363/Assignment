{
  "version": 2,
  "builds": [
    {
      "src": "bright_credit/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb" }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/(.*)",
      "dest": "bright_credit/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "bright_credit.settings"
  }
} 